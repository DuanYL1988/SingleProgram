<!-- 条件 -->
<view class="condition" style="height: 120rpx;margin-left: 10rpx;">
  <view>
    <block wx:for="{{factionIcon}}" wx:key="index">
    <image class="searchIcon" src="{{item.imgSrc}}" mut-bind:tap="doSearch" data-key="faction" data-value="{{item.param}}" />
    </block>
  </view>

  <view>
    <label>稀有度</label>
    <!-- <block wx:for="{{moveType}}" wx:key="index">
    </block> -->
  </view>

  <view style="margin-top: 10rpx;">
    <label>船舰</label>
  </view>

  <view style="position: absolute; top: 60rpx;">
    <button size="mini" style="background-color: #7665ff;width: 90rpx;height: 50rpx;font-size: small;margin-left: 20rpx;color: white;" bindtap="doSearch" data-key="clean">清除</button>
  </view>
</view>

<!-- 一览 -->
<scroll-view class="row" style="max-height: 690px;border: 3rpx solid skyblue;" scroll-y>
  <block wx:for="{{shipList}}" wx:key="index">
    <view class="card">
      <view class="faceIcon">
        <image class="faceImg" src="{{item.faceImgUrl}}"/>
      </view>
      <view class="infoArea" style="vertical-align:top;margin-top:5px">
        <view class="card-line">
          <label class="name">{{item.nameCn}}</label>
        </view>
        <view class="card-line">
        </view>
        <view class="card-line">
        </view>
        <view class="card-line" style="padding-left: 30px;">
          <button size="mini" style="width:80px;" wx:if="{{item.skinList.length > 0}}" bindtap="getImgBox" data-ship="{{item}}" data-type="skin">立绘</button>
          <button size="mini" bindtap="getImgBox" wx:if="{{item.artImg.length > 0}}" style="margin-left: 20px;width: 80px;" data-ship="{{item}}" data-type="art">画册</button>
        </view>
      </view>
    </view>

  </block>
</scroll-view>

<view style="position: relative">
  <!-- 轮播图 -->
  <swiper id="skinImgBox" wx:if="{{skinImgBox.length > 0}}" class="albumBox" style="margin-top: 10rpx;" current="0" indicator-dots circular>
    <swiper-item class="albumBoxItem" wx:for="{{skinImgBox}}" wx:key="index">
      <image class="albumBoxImg" mode="aspectFit" src="{{item}}" />
    </swiper-item>
  </swiper>

  <swiper id="artImgBox" wx:if="{{artImgBox.length > 0}}" class="albumBox" style="margin-top: 10rpx;" current="0" indicator-dots circular>
    <swiper-item class="albumBoxItem" wx:for="{{artImgBox}}" wx:key="index">
      <image class="albumBoxImg" style="transform: rotate(90deg)scale(1.8)"  mode="aspectFit" src="{{item}}" />
    </swiper-item>
  </swiper>

</view>
