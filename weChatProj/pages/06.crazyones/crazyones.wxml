<!-- 条件 -->
<view class="condition">
  <view>
    <label>隶属女主角 : </label>
    <block wx:for="{{heroineList}}" wx:key="index">
      <view class="searchBtn" mut-bind:tap="doSearch" data-value="{{item.param}}"><text class="btnText">{{item.name}}</text></view>
    </block>
  </view>
</view>

<!-- 一览 -->
<scroll-view class="row" style="max-height: 690px;border: 3rpx solid skyblue;" scroll-y>
  <block wx:for="{{dataList}}" wx:key="index">
    <view class="card">
      <view class="faceIcon" mut-bind:tap="getImgBox" data-data="{{item}}">
        <image referrerPolicy="no-referrer" class="faceImg" src="{{item.cardImg}}"/>
      </view>
      <view class="infoArea" style="vertical-align:top;margin-top:5px">
        <view class="card-line">
          <label class="name">{{item.name}}</label>
        </view>

      </view>
    </view>

  </block>
</scroll-view>
